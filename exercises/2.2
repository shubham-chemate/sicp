(define (print-point p)
  (newline)
  (display "(")
  (display (x-point p))
  (display ",")
  (display (y-point p))
  (display ")"))

(define (make-point x y)
  (cons x y))

(define (x-point x)
  (car x))

(define (y-point x)
  (cdr x))

(define pt1 (make-point 2 3))
(print-point pt1)

(define (make-segment p1 p2)
  (cons p1 p2))

(define (start-segment seg)
  (car seg))

(define (end-segment seg)
  (cdr seg))

(define pt2 (make-point 4 3))
(print-point pt2)

(define seg (make-segment pt1 pt2))
(print-point (start-segment seg))
(print-point (end-segment seg))

(define (midpoint-segment seg)
  (make-point (/ (+ (x-point (start-segment seg))
                    (x-point (end-segment seg))) 
                 2)
              (/ (+ (y-point (start-segment seg))
                    (y-point (end-segment seg))) 
                 2)))

(define midpt-seg (midpoint-segment seg))
(print-point midpt-seg)